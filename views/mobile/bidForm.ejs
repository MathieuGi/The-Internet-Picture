<!--Bid part-->
<div class="main-area bid-more">
  <div class="text-center">

    <!-- Paiement form -->
    <form id="paiement-form" novalidate>
      <div class="">

        <!-- Form first part -->
        <div class="information">
          
          <div class="form-group">
            <label for="form-name">Nom *</label>
            <div class="icone-field">
              <span class="icone-field-icone fa fa-user-o"></span>
              <input type="text" class="form-control icone-field-field" id="form-name" maxlength="40" aria-describedby="name" placeholder="Entrez votre nom" required>
            </div>
            <span class="error-message" id="mandatoryFields">Merci de renseigner un nom</span>
          </div>

            <!-- Image -->
            <div class="form-group img-input">

              <!-- Information bubble -->
              <span tabindex="0" class="info-icon fa fa-info-circle" data-trigger="focus" role="button" data-toggle="popover" data-placement="bottom" data-content="Types acceptés : jpeg, png, jpg, gif. Taille maximum : 4 Mo."></span>

              <label for="form-image">Image </label> <!-- (jpeg, png, jpg, gif - Maximum 4Mo) -->
              <input type="file" id="form-image" class="form-control" accept=".jpeg, .jpg, .png, .gif" data-buttonBefore="true" data-text="Parcourir" required>
              <div id="button-form-image">
                <label for="form-image" class="btn btn-form-image">Parcourir </label>
                <span id="form-image-text"></span>
              </div>
              
              <span id="wrongImageType" class="error-message"> Seules les type jpeg, jpg, png et gif sont acceptés </span>
              <span id="noImage" class="error-message"> Merci de selectionner une image </span>
              <span id="imageToBig" class="error-message"> La taille de l'image est trop importante </span>
          </div>
       
            <!-- Link -->
          <div class="form-group">

              <!-- Information bubble -->
              <span tabindex="0" class="info-icon fa fa-info-circle" data-trigger="focus" role="button" data-toggle="popover" data-placement="bottom" data-content="Choisissez un lien vers lequel sera rediriger les utilisateurs cliquant sur votre image."></span>

              <label for="form-url">Lien url</label>
                <div class="icone-field">
                <span class="icone-field-icone fa fa-external-link"></span>
                <input type="url" class="form-control icone-field-field" id="form-url" placeholder="Entrez un lien">
              </div>
          </div>

          <!-- Text -->
          <div class="form-group">
              <label for="form-text">Texte complémentaire (130 caractères)</label>
              <div class="icone-field">
                <span class="icone-field-icone fa fa-file-text-o"></span>
                <input type="text" class="form-control icone-field-field" id="form-text" maxlength="130" placeholder="Entrez un text complémentaire">
              </div>
          </div>

          <!-- Selected price -->
          <div class="form-group">
              <label for="form-price">Montant (enchère actuelle : <span class="bid-value"><%= bidders[0].price %></span> €) </label>
              <input type='hidden' class="min-price" value='<%= bidders[0].price + 1 %>'/>
               <div class="icone-field">
                <span class="icone-field-icone fa fa-eur"></span>
                <input type="number" class="form-control form-price icone-field-field" id="form-price" value="<%= bidders[0].price + 1 %>" required> 
              </div>
              <span class="error-message" id="price-too-low">L'enchère minimum est de <span class="min-bid-value"><%= bidders[0].price + 1 %></span> €</span>
              <span class="error-message" id="missing-price">Merci de renseigner un prix</span>
              <span class="error-message" id="must-be-integer">Seuls les valeurs entières sont acceptées</span>
          </div>

          <!-- User terms -->
          <div class="checkbox">
            <label for="form-terms">
                <input id="form-terms" type="checkbox"> J'accepte les <a class="terms" data-toggle="modal" data-target="#terms-modal">conditions générales d'utilisation</a>
            </label>
            <br>
            <span class="error-message" id="missing-terms">Merci d'accepter les conditions générales d'utilisation</span>
          </div>

          <!-- Go to the pay part -->
          <input type="button" id="trump" value="Enchérir" href="#paiement" />

          <p class="star-legend"><span class="star">*</span> Champ obligatoire</p>
          
        </div>
      </div></br>
       
        <!-- Separation between the two parts of form -->
      <div class="">

        <!-- Form second part -->
        <div class="paiement" id="paiement">

          <!-- Information bubble -->
          <span tabindex="0" class="info-icon fa fa-info-circle" data-trigger="focus" role="button" data-toggle="popover" data-placement="bottom" title="Informations" data-content="Seules les données de la première partie du formulaire seront concervées. Aucune information bancaire n'est concervée sur notre site."></span>


          <div class="form-group row">
            <label class="col-3 text-left" for="form-card-name">Nom sur la carte *</label>
            <input class="form-control col-9" type="text" name="card-name" id="form-card-name">
            <div class="col-3"></div>
            <span class="error-message" id="missing-card-name">Merci de renseigner le nom inscrit sur votre carte</span>
            
          </div>

          <div class="form-group row">
            <label class="col-3 text-left" for="form-email">Email</label>
            <input class="form-control col-9" type="email" name="form-email" id="form-email"> 
            <div class="col-3"></div>
            <span class="error-message" id="wrong-email">
              Le format de l'email est invalide
            </span>
          </div>

          <!-- Card number -->
          <div class="form-group row">
            <label class="col-3 text-left" for="card-element">Carte *</label>
            <div id="card-element" class="form-control col-9"></div>

            <div class="col-3"></div>

            <!-- Outcome for stripe -->
            <div class="outcome">
              <div class="error" role="alert"></div>
              <div class="success">
                <span class="token"></span>
              </div>
            </div>
          </div>
          

          <!-- Missing fields message -->
          <div class="invalid-feedback">
            Certains champs ne sont pas remplis correctement
          </div>

          <!-- Submit -->
          <div>
            <button type="submit" class="confirm-button" id="buy-button">Valider</button>
            <div class="loading">
              <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
              <span class="sr-only">Loading...</span>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>


<!-- Terms modal -->
<div class="modal fade" id="terms-modal" tabindex="-1" role="dialog" aria-labelledby="termsModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="termsModal">Conditions Générales de Vente</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>